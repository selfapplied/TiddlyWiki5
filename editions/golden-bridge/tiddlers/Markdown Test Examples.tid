import numpy as np
import matplotlib.pyplot as plt

def plot_golden_bridge_function():
    x = np.linspace(-5, 5, 1000)
    y = 0.5 + 0.5 * (np.exp(x) - 1) / (np.exp(x) + 1)
    
    plt.plot(x, y)
    plt.axhline(y=0.5, color='r', linestyle='--', label='Golden Line')
    plt.xlabel('x')
    plt.ylabel('f(x)')
    plt.title('Golden Bridge Function')
    plt.legend()
    plt.grid(True)
    plt.show()
